<script type="text/javascript">

  ShopifyApp.ready(function(){
    ShopifyApp.Bar.initialize({
      icon: 'https://fulfillment-service.herokuapp.com/icon.png'
    });

    <% if flash[:notice] %>
      ShopifyApp.flashNotice("<%= flash[:notice] %>");
    <% end %>

    <% if flash[:error] %>
      ShopifyApp.flashError("<%= flash[:error] %>");
    <% end %>

  });
</script>
