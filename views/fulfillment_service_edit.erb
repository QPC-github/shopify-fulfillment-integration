<script type="text/javascript">
  window.mainPageTitle = 'Shipwire Credentials';

  ShopifyApp.ready(function(){
    ShopifyApp.Bar.initialize({
      title: window.mainPageTitle,
      icon: 'https://fulfillment-service.herokuapp.com/icon.png',
      buttons: {
        primary: {
          label: "Save",
          message: 'save-credentials-form-message'
        },
        secondary: {
          label: "Back",
          href: "/",
          target: 'app'
        }
      }
    });

  <% if flash[:notice] %>
    ShopifyApp.flashNotice("<%= flash[:notice] %>");
  <% end %>

  <% if flash[:error] %>
    ShopifyApp.flashError("<%= flash[:error] %>");
  <% end %>

  });
</script>

<h1>Update your Shipwire Credentials</h1>

<form method="POST" action="/fulfillment_service" data-shopify-app-submit="save-credentials-form-message">
  <input type="hidden" name="_method" value="put" />

  <input type="text" name="username" value="<%= @username %>" placeholder="username">
  <input type="password" name="password" value="password" placeholder="password">
</form>
